<h1>Woodland Music Fest</h1>

<h3>Stages</h3>

<% if @stages.any? %>
  <ul>
    <% @stages.each do |stage| %>
      <li><a href="/stages/<%= stage.id %>"><%= stage.name %></a></li>
  <% end %>
  </ul>
<% else %>
  <p>There are currently no stages.</p>
<% end %>

<a href="/stages/new">Add a Stage</a>

<form action="/stages">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>
