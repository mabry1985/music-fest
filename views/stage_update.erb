<h1>Update <%= @stage.name() %></h1>

<form action="/stages/<%= @stage.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename stage</label>
  <input id="name" name="name" type="text" value="<%= @stage.name %>">
  <label for="location">Rename location</label>
  <input id="location" name="location" type="text" value="<%= @stage.location %>">
  <label for="genre">Rename genre</label>
  <input id="genre" name="genre" type="text" value="<%= @stage.genre %>">

  <button type="submit">Update</button>
</form>

<p><a href="/stages">Return to stage list</a></p>

<form action="/" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete stage</button>
</form>
